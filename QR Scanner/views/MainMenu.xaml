<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QR_Scanner.MainMenu"
             Title="Main menu"
             >
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="50">

            <Button
                x:Name="btnQRScan"
                Clicked="btnQRScan_Clicked"
                Text="SCAN QR"
                BackgroundColor="#990724"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"/>


            <Button
                x:Name="btnSearchByCode"
                Clicked="btnSearchByCode_Clicked"
                Text="SEARCH BY CODE" 
                BackgroundColor="#990724"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"/>

            <Button
                x:Name="btnReportBugs"
                Clicked="btnReportBugs_Clicked"
                Text="REPORT BUGS" 
                BackgroundColor="#990724"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>