<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QR_Scanner.QRScanner">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="50">
            <Button
                x:Name="btnQRScan"
                Clicked="btnQRScan_Clicked"
                Text="SCAN"
                TextColor="White"
                BackgroundColor="#990724">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>